{
	"name": "open-twitch-chat",
	"version": "0.0.0",
	"description": "[MacOS Only] Open Twitch chat window from command line",
	"repository": "https://github.com/Hoishin/open-twitch-chat.git",
	"license": "MIT",
	"author": "Hoishin <hoishinxii@gmail.com>",
	"bin": {
		"twitch-chat": "lib/index.js"
	},
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "npm run build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,json,md}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"execa": "^1.0.0",
		"yargs": "^13.2.1"
	},
	"devDependencies": {
		"@hoishin/eslint-config-ts": "^0.0.5",
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^1.0.0",
		"@types/execa": "^0.9.0",
		"@types/node": "^11.10.4",
		"@types/yargs": "^12.0.9",
		"eslint": "^5.15.0",
		"eslint-config-prettier": "^4.1.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4",
		"sort-package-json": "^1.20.0",
		"typescript": "3.3.3333"
	}
}
